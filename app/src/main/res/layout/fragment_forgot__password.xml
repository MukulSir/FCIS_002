<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_Password">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/ll01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:text="Forgot Password"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/black"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ask" />


    </LinearLayout>

    <TableLayout

        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:background="#0000ff"
        android:padding="10dp">

        <TableRow android:baselineAligned="false">

            <TextView
                android:id="@+id/txtsid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:gravity="right"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:text="Staff ID : " />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:maxWidth="10dp"
                android:padding="0dp"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/txtStaffID"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:hint="Staff ID"
                android:inputType="text"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textColorHint="#aaaaaa"
                android:minHeight="48dp" />
        </TableRow>

        <TableRow android:baselineAligned="false">

            <TextView
                android:id="@+id/txteid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:text="Email ID : " />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:hint="Email ID"
                android:inputType="text"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textColorHint="#aaaaaa"
                android:minHeight="48dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:lines="3"
                android:maxLines="3"
                android:textSize="20dp"
                android:lineHeight="20dp"
                android:textColor="@color/white"
                android:textColorHint="#aaaaaa"
                android:layout_column="1"
                android:layout_span="3"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnRestPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_span="3"
                android:backgroundTint="#1155ff"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Reset Password" />
        </TableRow>
    </TableLayout>

</FrameLayout>