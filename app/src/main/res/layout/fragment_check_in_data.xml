<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CheckInData">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="0dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnNew"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:backgroundTint="#0000ff"
            android:background="@drawable/shape"
            android:focusable="false"
            android:visibility="invisible"
            android:padding="0dp"
            android:text="o"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="250dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#1155ff"
            android:orientation="vertical"
            android:padding="5dp">
            <TableRow>
                <TextView
                    android:id="@+id/tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:maxWidth="100dp"
                    android:maxHeight="150dp"
                    android:minWidth="150dp"
                    android:padding="5dp"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    tools:viewBindingType="android.widget.TextView" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#1155aa"
                    android:backgroundTint="#1155aa"
                    android:text="Check-out"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:visibility="visible"
                    tools:viewBindingType="android.widget.Button" />
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/txtWalkInID"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#00ffff"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="New"
                    android:textColor="#0000ff"
                    android:visibility="invisible" />

            </TableRow>

        </TableLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>
